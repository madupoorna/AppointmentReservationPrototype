<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ueeprototype.ueeprototype.loginActivity"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/loginImageBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sliit_faculty_of_computing_building_tinted"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/sliitLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/sliit_logo"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="70dip"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="350dip"
        android:background="@drawable/edittext_bg"
        android:hint="@string/user_name"
        android:inputType="text"
        android:gravity="center"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="400dip"
        android:hint="@string/password"
        android:background="@drawable/edittext_bg"
        android:inputType="textPassword"
        android:gravity="center"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/signinBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="500dip"
        android:backgroundTint="@android:color/darker_gray"
        android:text="@string/sign_in"
        android:background="@drawable/button_bg"
        android:textColor="@android:color/white" />

</RelativeLayout>
